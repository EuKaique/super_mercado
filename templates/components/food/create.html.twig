{% extends "base.html.twig" %}

{% block title %} Alimentos {% endblock %}

{% block body %}
    {% include 'components/header.html.twig' %}
    <div class="container">
    {% include 'components/aside-dashboard.html.twig' %}
        <div>
            <div class="flex-between">
                <div>
                    <h2>Cadastrar alimento</h2>
                </div>
                <div>
                    <button class="btn-back" onclick="navigateTo('food')">Voltar</button>
                </div>
            </div>
            <form method="POST"  action="{{path('food_store')}}" enctype="multipart/form-data">
                <div class="form-class">
                    <label for="update_photo" class="update_photo">Procurar imagem</label>
                    <input 
                        id="update_photo"
                        name="add_image" 
                        type="file"
                        accept=".png, .jpg, .jpeg"
                        maxlength="1048576" 
                    />
                </div>
                <div class="form-class">
                    <label for="nome">Nome:</label>
                    <input 
                        id="nome"
                        name="nome" 
                        type="text" 
                        placeholder="Digite o nome do alimento"
                    />
                </div>
                <div class="form-class">
                    <label for="preco">Preço:</label>
                    <input 
                        id="preco"
                        name="preco" 
                        type="text" 
                        placeholder="Digite o preço do alimento"
                        oninput="moneyMask(this)"
                    />
                </div>
                <div class="form-class">
                    <button type="submit">Salvar</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}