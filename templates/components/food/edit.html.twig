{% extends "base.html.twig" %}

{% block title %} Alimentos {% endblock %}

{% block body %}
    {% include 'components/header.html.twig' %}
    {% include 'components/aside-dashboard.html.twig' %}
    <div class="container">
        <div class="flex-between">
            <div>
                <h2>Editar {{ food.nome }}</h2>
            </div>
            <div>
                <button class="btn-back" onclick="navigateTo('food')">Voltar</button>
            </div>
        </div>
        <form method="POST"  action="{{path('food_edit', {id: food.id})}}" enctype="multipart/form-data">
            <div class="form-class">
                <label for="update_photo" class="update_photo">Procurar imagem</label>
                <input 
                    id="update_photo"
                    name="add_image" 
                    type="file"
                    accept=".png, .jpg, .jpeg"
                    maxlength="1048576" 
                />
            </div>
            <div class="form-class">
                <label for="nome">Nome:</label>
                <input 
                    id="nome"
                    name="nome" 
                    type="text" 
                    value="{{ food.nome }}"
                />
            </div>
            <div class="form-class">
                <label for="preco">Pre√ßo:</label>
                <input 
                    id="preco"
                    name="preco" 
                    type="text" 
                    value="{{ food.preco }}"
                    oninput="moneyMask(this)"
                />
            </div>
            <div class="form-class">
                <button type="submit">Salvar</button>
            </div>
        </form>
    </div>
{% endblock %}